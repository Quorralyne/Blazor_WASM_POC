@using Microsoft.AspNetCore.Components.Authorization

@page "/counter"
@attribute [Authorize]
@inject AuthenticationStateProvider AuthStateProvider

<h1>Counter</h1>
<AuthorizeView>
    <Authorized>
        Access granted to @context.User.Identity.Name.
        Your favorite band is @favoriteBandName.
    </Authorized>
</AuthorizeView>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    public string favoriteBandName = "not available";

    private void IncrementCount()
    {
        currentCount++;
    }

    private string GetUserBandName()
    {
        var tokenClaimBandResult = AuthStateProvider.GetAuthenticationStateAsync().Result.User.Claims.Where(x => x.Type == "band").FirstOrDefault().Value;

        if (tokenClaimBandResult != null) favoriteBandName = tokenClaimBandResult;

        return favoriteBandName;
    }
}
